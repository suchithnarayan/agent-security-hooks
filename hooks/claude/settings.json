{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_comment": "Claude Code hook configuration for Agent Security Hooks",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "agent-security-hooks --platform claude --event pre",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Read|ReadFile",
        "hooks": [
          {
            "type": "command",
            "command": "agent-security-hooks --platform claude --event pre",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write|Edit|WriteFile|EditFile",
        "hooks": [
          {
            "type": "command",
            "command": "agent-security-hooks --platform claude --event pre",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "agent-security-hooks --platform claude --event post",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "agent-security-hooks --platform claude --event prompt",
            "timeout": 5
          }
        ]
      }
    ]
  }
}